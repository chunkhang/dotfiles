# Always sort files
--sort-files

# Always color
--color

# Use less as pager
--pager

# Define filetypes
--type-add=css=scss
--type-add=proto=proto
--type-add=yml=yml
--type-add=md=md

# Ignore directories
--ignore-directory=build
--ignore-directory=Pods
--ignore-directory=coverage

# Ignore files
--ignore-file=is:.tags
--ignore-file=is:package-lock.json
--ignore-file=is:Podfile.lock
