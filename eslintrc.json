{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": 0,
    "max-len": ["warn", {"code": 80}],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "no-var": "warn",
    "prefer-const": "warn"
  }
}
