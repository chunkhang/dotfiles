[user]
  name = Marcus Mu
  email = chunkhang@gmail.com

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[init]
  defaultBranch = main

[commit]
  verbose = true

[push]
  followTags = true

[pull]
  rebase = true

[rebase]
  instructionFormat = "(%an <%ae>) %s"

[diff]
  tool = nvim

[difftool]
  prompt = true
  trustExitCode = true

[difftool "nvim"]
  cmd = \
    nvim -d "$LOCAL" "$REMOTE" \
    -c 'wincmd l'

[merge]
  tool = nvim

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvim"]
  cmd = \
    nvim -R "$MERGED" "$BASE" "$LOCAL" "$REMOTE" \
    -c 'setlocal noreadonly splitbelow' \
    -c 'tab sbuffer 2 | sbuffer 3 | windo diffthis' \
    -c 'tab sbuffer 2 | sbuffer 4 | windo diffthis' \
    -c 'tabfirst'
  trustExitCode = true

[advice]
  addEmptyPathspec = false
  waitingForEditor = false
  pushUpdateRejected = false

[alias]
  discard = checkout -- *
  drop = reset --hard @{u}
  pr = ! ~/.scripts/git/pr
  purge = ! ~/.scripts/git/purge
  spring = ! ~/.scripts/git/spring
  tidy = ! ~/.scripts/git/tidy
  unstage = reset HEAD *
