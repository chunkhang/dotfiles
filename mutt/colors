# }}}
# =============================================================================
# HEADER {{{
# =============================================================================

color hdrdefault magenta black

# Fields
color header yellow black "^From:"
color header green black "^Subject:"

# }}}
# =============================================================================
# BODY {{{
# =============================================================================

color normal color15 black

# URL
color body cyan black "https?://[\-\.,/%~_:?&=\#@a-zA-Z0-9]+"

# Email
color body cyan black "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+"

# Git
color body cyan black "[> ]*@@.*"
color body green black "^[\+][^\+]+.*"
color body red black "^\-[^\-]+.*"

# }}}
# =============================================================================
