# Open applications

cmd - return : open /Applications/iTerm.app
cmd + shift - return : open /Applications/Firefox.app

fn - c : open /Applications/Calendar.app
fn - m : open /Applications/Mail.app
fn - s : open /Applications/Spotify.app
fn - t : open /Applications/Telegram.app
fn - w : open /Applications/Whatsapp.app
fn - l : \
    APPS=$(echo \
        "l\tList all available applications" \
        "\nc\tCalendar" \
        "\nm\tMail" \
        "\ns\tSpotify" \
        "\nt\tTelegram" \
        "\nw\tWhatsapp" \
    ); \
    osascript -e "display dialog \"$APPS\" with title \"List of Applications\" buttons {\"Close\"} default button \"Close\""

# Run scripts
fn - 1 : osascript -e "display notification \"Desktop $(chunkc tiling::query --desktop id) - $(chunkc tiling::query --desktop mode)\" with title \"Desktop\""
fn - 2 : osascript -e "display notification \"$(chunkc tiling::query --window tag)\" with title \"Window\""
fn - 3 : if ! pgrep afplay &>/dev/null; \
    then osascript -e 'display notification "Rain starts falling..." with title "Rain Machine"'; afplay -q 1 ~/Music/rain.m4a &!; \
    else osascript -e 'display notification "The rain stopped." with title "Rain Machine"'; killall afplay &>/dev/null; fi
fn - 0 : \
    SCRIPTS=$(echo \
        "0\tList all available scripts" \
        "\n1\tGet information for current desktop" \
        "\n2\tGet information for current window" \
        "\n3\tToggle rain in background" \
    ); \
    osascript -e "display dialog \"$SCRIPTS\" with title \"List of Scripts\" buttons {\"Close\"} default button \"Close\""

# Focus window

alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

alt - p : chunkc tiling::window --focus prev
alt - n : chunkc tiling::window --focus next

# Reposition window

shift + alt - h : chunkc tiling::window --swap west
shift + alt - j : chunkc tiling::window --swap south
shift + alt - k : chunkc tiling::window --swap north
shift + alt - l : chunkc tiling::window --swap east

shift + cmd - h : chunkc tiling::window --warp west
shift + cmd - j : chunkc tiling::window --warp south
shift + cmd - k : chunkc tiling::window --warp north
shift + cmd - l : chunkc tiling::window --warp east

alt - r : chunkc tiling::desktop --rotate 270
alt - y : chunkc tiling::desktop --mirror vertical
alt - x : chunkc tiling::desktop --mirror horizontal

# Resize window

shift + alt - y : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + alt - u : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + alt - i : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + alt - o : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

shift + alt - f : chunkc tiling::window --toggle fullscreen

shift + cmd - o : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
shift + cmd - i : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + cmd - u : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
shift + cmd - y : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

shift + cmd - 0 : chunkc tiling::desktop --equalize

# Set window insertion point
ctrl + alt - h : chunkc tiling::window --use-insertion-point west
ctrl + alt - j : chunkc tiling::window --use-insertion-point south
ctrl + alt - k : chunkc tiling::window --use-insertion-point north
ctrl + alt - l : chunkc tiling::window --use-insertion-point east
ctrl + alt - x : chunkc tiling::window --use-insertion-point cancel

# Change desktop layout

ctrl + alt - b : chunkc tiling::desktop --layout bsp
ctrl + alt - m : chunkc tiling::desktop --layout monocle
ctrl + alt - f : chunkc tiling::desktop --layout float

# Send window to desktop (uses native desktop navigation)
ctrl + alt - left : chunkc tiling::window --send-to-desktop prev; skhd --key "ctrl - left"
ctrl + alt - right : chunkc tiling::window --send-to-desktop next; skhd --key "ctrl - right"
ctrl + alt - 1 : chunkc tiling::window --send-to-desktop 1; skhd --key "ctrl - 1"
ctrl + alt - 2 : chunkc tiling::window --send-to-desktop 2; skhd --key "ctrl - 2"
ctrl + alt - 3 : chunkc tiling::window --send-to-desktop 3; skhd --key "ctrl - 3"
ctrl + alt - 4 : chunkc tiling::window --send-to-desktop 4; skhd --key "ctrl - 4"
ctrl + alt - 5 : chunkc tiling::window --send-to-desktop 5; skhd --key "ctrl - 5"

